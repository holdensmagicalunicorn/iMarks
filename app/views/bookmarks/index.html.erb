<table>
	<section class="paginator">
		<% form_tag request.path, :method => 'get' do %>
		 <% content_tag :label do %>
	    <%= text_field_tag :search, params[:search] %>
		 <% end %>
		<br>
		<% end %>
		<%= will_paginate @bookmarks %>
		<!-- will_paginate @bookmarks, :javascript => "('.pagination a').attr('data-remote', 'true')" -->
		<!-- will_paginate @bookmarks, :class => 'pagination ajax' -->
		<!-- http://www.tricksonrails.com/2010/04/rails3-and-will_paginate-doing-easy-remote-links-rails3-tricks-02/ -->
	</section>
	<%- unless @bookmarks.empty? -%>
	<ul class="paginate_sorting">
		<li><%= sortable 'url', :label => 'URL' %></li>
		<li><%= sortable 'tag_names', :label => 'Tags' %></li>
		<li><%= sortable 'updated_at', :label => 'Date' %></li>
	</ul>
	<ul class="results">
		<%= render @bookmarks %>
	</ul>
	<%- else -%>
	<p>Your search - <strong><%= params[:search] %></strong> - did not match any links or taggings.</p>
	<h3>Suggestions:</h3>
	<ul>
		<li>Make sure all words are spelled correctly.</li>
		<li>Try different keywords.</li>
		<li>Try more general keywords.</li>
		<li>Try fewer keywords.</li>
	</ul>
	<%- end -%>
<br>
<%= link_to 'New Bookmark', new_bookmark_path %>

<%= render 'tag_cloud' %>